{
  "mcpServers": {
    "firecrawl": {
      "command": "npx",
      "args": ["firecrawl-mcp"],
      "env": {
        "FIRECRAWL_API_KEY": "${FIRECRAWL_API_KEY}",
        "FIRECRAWL_BASE_URL": "https://api.firecrawl.dev",
        "FIRECRAWL_TIMEOUT": "30000",
        "FIRECRAWL_MAX_RETRIES": "3"
      }
    }
  },
  "firecrawl": {
    "hyperlocal": {
      "nevada": {
        "targets": [
          "https://www.nevadarealtor.com",
          "https://www.clarkcountynv.gov",
          "https://www.lasvegasnevada.gov",
          "https://www.hendersonnevada.gov",
          "https://www.boulder-city.nv.us",
          "https://www.cityofmesquitenv.gov",
          "https://www.cityofnorthlasvegas.com"
        ],
        "extraction": {
          "business_listings": true,
          "local_events": true,
          "government_services": true,
          "real_estate_data": true,
          "probate_attorneys": true,
          "court_information": true
        }
      },
      "competitors": {
        "probate_real_estate": [
          "https://www.probaterealestate.com",
          "https://www.inheritedproperty.com",
          "https://www.probateproperty.com",
          "https://www.estatesales.com"
        ],
        "nevada_realtors": [
          "https://www.berkshirehathawayhs.com",
          "https://www.coldwellbanker.com",
          "https://www.remax.com"
        ]
      }
    },
    "content_generation": {
      "hyperlocal_pages": {
        "neighborhoods": [
          "Summerlin",
          "Henderson",
          "North Las Vegas",
          "Boulder City",
          "Mesquite",
          "Spring Valley",
          "Enterprise"
        ],
        "content_types": [
          "probate_guides",
          "market_analysis",
          "court_procedures",
          "attorney_directories",
          "property_valuations"
        ]
      }
    },
    "data_extraction": {
      "structured_data": {
        "real_estate_listings": true,
        "business_contacts": true,
        "court_schedules": true,
        "probate_forms": true,
        "local_regulations": true
      },
      "unstructured_data": {
        "news_articles": true,
        "blog_posts": true,
        "social_media": true,
        "reviews": true,
        "testimonials": true
      }
    }
  }
}
