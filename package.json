{
  "name": "probaterealestatesales",
  "version": "0.1.0",
  "private": true,
  "description": "Probate Real Estate Sales website - Optimized for Google Search & Grokipedia",
  "scripts": {
    "dev": "next dev",
    "dev:alt": "next dev -p 3001",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "build:vercel": "next build",
    "deploy:vercel": "vercel --prod",
    "deploy:cloudflare": "node scripts/deploy-cloudflare.js",
    "cloudflare:optimize": "node scripts/deploy-cloudflare.js",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:port3000": "BASE_URL=http://localhost:3000 npm test",
    "test:port3001": "BASE_URL=http://localhost:3001 npm test",
    "test:homepage": "playwright test tests/homepage.spec.ts",
    "test:probate": "playwright test tests/probate-site-audit.spec.ts",
    "test:performance": "playwright test tests/performance.spec.ts",
    "test:services": "playwright test tests/services.spec.ts",
    "test:fast": "playwright test --workers=6 --timeout=20000",
    "test:ci": "playwright test --workers=2 --reporter=list,html",
    "test:lighthouse": "playwright test tests/homepage.spec.ts --grep='Lighthouse'",
    "test:seo": "playwright test --grep='SEO'",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:desktop": "playwright test --project='chromium' --project='firefox' --project='webkit'"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-react": "^0.460.0",
    "next": "15.5.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swr": "^2.3.6",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@biomejs/cli-win32-x64": "^2.3.8",
    "@playwright/test": "^1.55.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "playwright-lighthouse": "^4.0.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.7.2"
  }
}
